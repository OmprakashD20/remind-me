generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id        String   @id @default(uuid())
  name      String
  userId    String
  color     String
  createdAt DateTime @default(now())

  //This restricts the user from creating more than one collection with the same name
  @@unique([name, userId])
}
